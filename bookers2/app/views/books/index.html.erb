<h1>User info</h1>
<% @user.each do |user| %>
<div>
 <%= attachment_image_tag user, :image, :fill, 10,10, format: 'jpeg' %>
 <% end %>
</div>

<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<table>
 <tr>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan="3"></th>
 </tr>
 <tbody>
  <% @books.each do |book| %>
   <tr>
    <td></td>
    <td>
     <%= link_to book_path(book.id) do %>
     <%= book.title %>
     <% end %>
    </td>
    <td><%= book.body %></td>
   </tr>
  <% end %>
 </tbody>
</table>